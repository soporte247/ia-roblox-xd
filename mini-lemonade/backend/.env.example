# Environment
NODE_ENV=production

# Server
PORT=3000

# Database
DATABASE_URL=./database.sqlite

# CORS
CORS_ORIGIN=https://your-domain.com

# OAuth (Roblox)
ROBLOX_CLIENT_ID=your_roblox_client_id
ROBLOX_CLIENT_SECRET=your_roblox_client_secret
ROBLOX_REDIRECT_URI=https://your-domain.com/auth/roblox/callback

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Session
SESSION_SECRET=your_session_secret_key_here

# OpenAI (Opcional)
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL=gpt-4o-mini

# DeepSeek (Gratis - recomendado para preguntas de clarificación)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Ollama (Opcional - si OPENAI_API_KEY no está set)
# Para Render: instalar automáticamente vía start.sh
# Para local: ollama serve en otra terminal
OLLAMA_MODEL=qwen2.5-coder:7b
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=60000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

